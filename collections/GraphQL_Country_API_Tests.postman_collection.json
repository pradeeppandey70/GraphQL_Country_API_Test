					"name": "Get Country By Code",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\",function(){\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Country name is India\", function () {\r",
									"    pm.expect(pm.response.json().data.country.name).to.eql(\"India\");\r",
									"});\r",
									"\r",
									"pm.test(\"Currency is INR\", function () {\r",
									"    pm.expect(pm.response.json().data.country.currency).to.eql(\"INR\");\r",
									"});\r",
									"\r",
									"pm.test(\"Capital is New Delhi\", function () {\r",
									"    pm.expect(pm.response.json().data.country.capital).to.eql(\"New Delhi\");\r",
									"});\r",
									"\r",
									"pm.test(\"No graphQL errors\", function(){\r",
									"    pm.expect(pm.response.json().errors).to.be.undefined;\r",
									"});\r",
									"\r",
									"const schema = {\r",
									"  \"type\": \"object\",\r",
									"  \"properties\": {\r",
									"    \"data\": {\r",
									"      \"type\": \"object\"\r",
									"    }\r",
									"  },\r",
									"  \"required\": [\"data\"]\r",
									"};\r",
									"\r",
									"pm.test(\"Response schema valid\", function () {\r",
									"    pm.response.to.have.jsonSchema(schema);\r",
									"});\r",
									""
